<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

<TextView
    android:id="@+id/LabelTarifa"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="33dp"
    android:textSize="20dp"
    android:textStyle="normal" />

<TextView
    android:id="@+id/LabelCanvi"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/LblTarifa"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
    android:textSize="15dp"
    android:textStyle="normal" />

<TextView android:id="@+id/LabelZona" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:textStyle="normal" 
	android:textSize="20dp" />
	
<TextView android:id="@+id/LabelContinente" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:textStyle="normal" 
	android:textSize="20dp"
	android:layout_below="@+id/LabelZona" />

<TextView android:id="@+id/LabelPrecio" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:textStyle="normal" 
	android:textSize="20dp"
	android:layout_below="@+id/LabelContinente" />
	
</RelativeLayout>
